{
	"compilerOptions": {
		"outDir": "bin",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNext",
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"strict": true,
		"removeComments": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
